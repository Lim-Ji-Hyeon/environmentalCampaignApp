<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".certification_page.CertificationCampaign">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="#AAAAAAAA"
        android:gravity="center"
        android:text="광                    고"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/bt_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/sharp_navigate_before_black_18dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_cp_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="캠페인 이름"
                        android:textStyle="bold"
                        android:textSize="25dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:padding="5dp"
                            android:src="@drawable/icon_check" />

                        <TextView
                            android:id="@+id/tv_certiFrequency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2주, 주 5일"
                            android:layout_gravity="center_vertical"
                            android:textSize="10dp"/>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/icon_calendar" />

                        <TextView
                            android:id="@+id/tv_certiLeftDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0일 뒤 종료"
                            android:layout_gravity="center_vertical"
                            android:textSize="10dp"/>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/edge"
                    android:scaleType="fitCenter"
                    android:src="@drawable/burista"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="인증방법"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/fl_rightPhoto1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_rightPhoto1"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/edge"
                                android:src="@drawable/cp1"/>

                            <TextView
                                android:id="@+id/tv_rightPhotoInfo1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/tv_rightPhotoPath1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/icon_right"/>

                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_rightPhoto2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_rightPhoto2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/edge"
                                android:src="@drawable/cp2"/>

                            <TextView
                                android:id="@+id/tv_rightPhotoInfo2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/tv_rightPhotoPath2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/icon_right"/>

                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_wrongPhoto1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_wrongPhoto1"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/edge"
                                android:src="@drawable/cp3"/>

                            <TextView
                                android:id="@+id/tv_wrongPhotoInfo1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/tv_wrongPhotoPath1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/icon_wrong"/>

                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_wrongPhoto2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_wrongPhoto2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/edge"
                                android:src="@drawable/cp4"/>

                            <TextView
                                android:id="@+id/tv_wrongPhotoInfo2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/tv_wrongPhotoPath2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/icon_wrong"/>

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/layout_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edge"
                app:tabGravity="fill"
                app:tabIndicatorColor="#67D4BF"
                app:tabMode="fixed"
                app:tabSelectedTextColor="#67D4BF"
                app:tabTextColor="#000000">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_certiItem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="달성률" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_certiItem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인증샷" />

            </com.google.android.material.tabs.TabLayout>

            <FrameLayout
                android:id="@+id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/certi_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="인증하기"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#67D4BF"
        android:textColor="#FFFFFF"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"/>

</LinearLayout>