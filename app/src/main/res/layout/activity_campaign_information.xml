<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CampaignInformation">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="#AAAAAAAA"
        android:gravity="center"
        android:text="광                    고"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:src="@drawable/sharp_navigate_before_black_18dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/edge"
                android:src="@drawable/burista" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_cp_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:text="버리스타"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_frequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#EEEEEE"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:text="주 2일"
                        android:textColor="#555555"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#EEEEEE"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:text="2주"
                        android:textColor="#555555"
                        android:textSize="15dp" />

                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/person" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="참가인원"
                            android:layout_margin="5dp"
                            android:textStyle="bold"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_participantsN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="94명"
                            android:layout_margin="5dp"
                            android:textStyle="bold"
                            android:textSize="15sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/retry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="평균 참가 횟수"
                            android:layout_margin="5dp"
                            android:textStyle="bold"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_reCampaignN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.4회"
                            android:layout_margin="5dp"
                            android:textStyle="bold"
                            android:textSize="15sp" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/layout_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edge"
                app:tabGravity="fill"
                app:tabIndicatorColor="#FF2B56"
                app:tabMode="fixed"
                app:tabSelectedTextColor="#FF2B56"
                app:tabTextColor="#000000">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="설명" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인증 방법" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="후기" />

            </com.google.android.material.tabs.TabLayout>

            <FrameLayout
                android:id="@+id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_bookmark"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="15dp"
            app:srcCompat="@drawable/bookmark" />

        <TextView
            android:id="@+id/tv_participation"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#FF2B56"
            android:gravity="center"
            android:text="참가하기 (오늘 바로 시작)"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>