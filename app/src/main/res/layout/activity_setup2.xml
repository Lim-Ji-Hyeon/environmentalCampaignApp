<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".set_up_page.setup2">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="#AAAAAAAA"
        android:gravity="center"
        android:text="광                    고"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edge"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bt_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/sharp_navigate_before_black_18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="캠페인 개설 (2/3)"
            android:clickable="false"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            app:srcCompat="@drawable/sharp_navigate_before_black_18dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="캠페인 설명"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_cp_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="8"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:hint="캠페인에 대한 설명을 적어주세요."/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_cp_info1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/edge"
                    android:src="@drawable/add_image" />

                <ImageView
                    android:id="@+id/iv_cp_info2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/edge"
                    android:src="@drawable/add_image" />

                <ImageView
                    android:id="@+id/iv_cp_info3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/edge"
                    android:src="@drawable/add_image" />

                <ImageView
                    android:id="@+id/iv_cp_info4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/edge"
                    android:src="@drawable/add_image" />

                <ImageView
                    android:id="@+id/iv_cp_info5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/edge"
                    android:src="@drawable/add_image" />

<!--                <ImageView-->
<!--                    android:id="@+id/checkImage"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:adjustViewBounds="true"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_margin="5dp"-->
<!--                    android:scaleType="fitCenter"-->
<!--                    android:background="@drawable/edge"-->
<!--                    android:visibility="gone"-->
<!--                    android:src="@drawable/add_image" />-->

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
            android:background="#67D4BF"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="visible"
            android:text="&lt;     이전   " />

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
            android:background="#67D4BF"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="   다음     &gt;" />

    </LinearLayout>

</LinearLayout>